<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/dialog_layout_root_about_us"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"	
	android:orientation="vertical"
	android:padding="5dp"
	android:background="#7ec0ee">



<LinearLayout
	android:id="@+id/dialog_layout_about_us"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"	
	android:orientation="vertical"
	android:padding="10dp"
	android:background="@drawable/backg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mainlogo" />
        
        <TextView
		   android:id="@+id/ad_title"
		   android:layout_width="match_parent"
		   android:layout_height="50dp"
		   android:text="@string/about_og"		   
		   android:gravity="center"
		   android:textSize="20sp"
		   android:textColor="#7ec0ee" />      
    </LinearLayout>
	<LinearLayout
		   android:layout_width="match_parent"
	       android:layout_height="2dp"
	       android:background="#7ec0ee" >
	          
     </LinearLayout>
    
   	
	 <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.75" >	
	
    	<ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/sv">
          
			<TextView
			    android:id="@+id/ad_tv_content"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="TextView" 
			    android:paddingTop="10dp"
			    android:paddingBottom="10dp"
			    android:textSize="18sp"
			    android:textColor="#FFFFFF"/>		
	</ScrollView>
	</LinearLayout>			
	
    <LinearLayout
	   android:layout_width="match_parent"
	   android:layout_height="50dp">
		
			<Button
			    android:id="@+id/ad_bt_ok"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal" 
			    android:text="OK"
			    android:textColor="#FFFFFF"
			    android:textSize="20sp">
			</Button>
		
		</LinearLayout>
		
    </LinearLayout>
</LinearLayout> 